<%= search_form_for q, url: stocks_path do |f| %>
  <div class="flex w-full">
    <%= f.search_field :name_cont, class: "h-10 bg-white border rounded p-2", placeholder: "ストック名検索" %>
    <%= button_tag type: "submit", class: "bg-dull-green text-white rounded px-4 py-2" do %>
      <div class="flex">
        <svg class="size-6 text-white" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z"/><circle cx="10" cy="10" r="7" /><line x1="21" y1="21" x2="15" y2="15" />
        </svg>
        <span>検索</span>
      </div>
    <% end %>
  </div>
<% end %>
