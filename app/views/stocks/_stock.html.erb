<%= turbo_frame_tag stock do %>
  <%# NOTE: ヘルパーにカラーと最終更新日の表示ロジックを記述 %>
  <div class="px-4 py-2 rounded border border-box mb-2 lg:mb-0 <%= set_bg_and_border_color(stock) %>">

    <div class="flex justify-between items-center mb-2">
      <%= link_to edit_stock_path(stock), data: { turbo_frame: 'modal_frame' }, class: "flex items-center space-x-4" do %>
        <h3 class="text-f-head text-xl font-bold"><%= stock.name %></h3>
        <% if stock.purchase_target %>
          <svg class="size-6 text-f-head" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z"/>  <circle cx="9" cy="19" r="2" /><circle cx="17" cy="19" r="2" /><path d="M3 3h2l2 12a3 3 0 0 0 3 2h7a3 3 0 0 0 3 -2l1 -7h-15.2" />
          </svg>
        <% end %>
      <% end %>
      <%= render 'stocks/quantity_icon', stock: stock %>
    </div>

    <div class="flex justify-between items-center">
      <div class="text-sm text-gray-600">最終更新日：<%= number_of_days_elapsed(stock) %></div>
      <div class="flex justify-end items-center w-8 px-[6px]">
        <%= link_to stock_path(stock), data: { turbo_method: :delete, turbo_confirm: t('defaults.confirm.stock'), turbo_frame: "stock_#{stock.id}" } do %>
          <svg class="size-5 text-f-body" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z"/><line x1="4" y1="7" x2="20" y2="7" /><line x1="10" y1="11" x2="10" y2="17" /><line x1="14" y1="11" x2="14" y2="17" />
            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
