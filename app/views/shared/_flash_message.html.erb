<% flash.each do |type, message| %>
  <%
    case type.to_s
    when "success"
      color = "bg-green-100 text-green-800"
    when "error", "warning"
      color = "bg-red-100 text-red-800"
    when "info"
      color = "bg-blue-100 text-blue-800"
    else
      color = "bg-gray-100 text-gray-800"
    end
  %>
  <div class="container mx-auto flex justify-end absolute top-24 right-0">
    <div class="w-1/2 h-10 rounded text-end my-6 <%= color %>">
      <%= message %>
    </div>
  </div>
<% end %>
