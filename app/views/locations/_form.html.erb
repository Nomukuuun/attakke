<%= form_with model: location, data: { action: "turbo:submit-end->modal-frame#close" } do |f| %>
  <div class="flex flex-col mb-6">
    <%= f.label :name, class: "text-xl font-bold text-f-head" %>
    <%= f.text_field :name, placeholder: "入力してください", class: "bg-white border-black border rounded p-2 w-full" %>
    <%= render 'shared/error_messages', object: location, attribute: :name %>
  </div>

  <div class="mb-4">
    <% if action_name.in?(["new", "create"]) %>
      <%= f.submit "保存", class: "w-full text-lg text-f-body bg-dull-red rounded p-2" %>
    <% elsif action_name.in?(["edit", "update"]) %>
      <div class="flex items-center text-center space-x-2">
        <%= f.submit "保存", class: "basis-1/2 text-lg text-f-body bg-dull-red rounded p-2" %>
        <%= link_to "削除", location_path(location), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('defaults.confirm.location'), turbo_frame: "location_#{location.id}" }, class: "basis-1/2 text-lg text-f-body bg-gray-300 rounded p-2 hover:bg-gray-400" %>
      </div>
    <% end %>
  </div>
<% end %>
