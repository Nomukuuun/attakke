<%= form_with model: location, data: { action: "turbo:submit-end->modal-frame#close" } do |f| %>
  <h2 class="modal-header">保管場所名の編集</h2>

  <div class="flex flex-col mb-6">
    <div class="flex items-center justify-between pr-2">
      <%= f.label :name, class: "modal-label" %>
      <%= link_to location_path(location), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('defaults.confirm.location'), turbo_frame: "location_#{location.id}" } do %>
        <svg class="modal-icon" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z"/><line x1="4" y1="7" x2="20" y2="7" /><line x1="10" y1="11" x2="10" y2="17" /><line x1="14" y1="11" x2="14" y2="17" />
          <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
          <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
        </svg>
      <% end %>
    </div>
    <%= f.text_field :name, autofocus: true, placeholder: "入力してください", class: "modal-input" %>
    <%= render 'shared/error_messages', object: location, attribute: :name %>
  </div>

  <%= f.submit "保存", class: "modal-submit w-full" %>
<% end %>
